@model IEnumerable<WebCustumerManagerApp.Models.EntityCustomer>

@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Customer</title>
   
</head>
<body>
    <p>
        @Html.ActionLink("New Customer", "Create")
    </p>
    <table class="table">
        
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerFirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OccupationGroup.OccupationGroupTitle)
                </th>
                <th></th>
            </tr>
        
            @foreach (var item in Model)
            {
                
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OccupationGroup.OccupationGroupTitle)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.CustomerId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })
                        </td>
                    </tr>
                
            }

    </table>
</body>
</html>
